<div id="introImg">
    <div id="text-imgHolder">
        <div id="introText">
            <p>EAT</p>
            <p>THE</p>
            <p>BURGER!</p>
        </div>

        <img id="introBurger" src="https://i.imgur.com/qaslKyn.png">
    </div>
</div>

<div id="mobileBurgerHolder">
    <img id="mobileBurger" src="https://i.imgur.com/qaslKyn.png">

</div>

<div id="inputForm">
    <p id="welcome">Welcome to your Burger Log!</p>

    <p class="textColor">Enter a burger you want to eat and hit Add Burger!</p>
    <form class="create-form">

        <div class="form-group">
            {{!-- <label for="bu">Burger Name:</label> --}}
            <textarea rows="6" type="text" id="bu" name="name"></textarea>
        </div>

        <button class="btn btn-dark" type="submit">Add Burger</button>
    </form>
</div>

<hr>

<div class="container" id="burgerLog">
    <div class="row">
        <div class="col">
            <p class="burgersHeader">To Eat</p>
            <ul id="burgersAdded" class="textColor">
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col">
            <p class="burgersHeader">Eaten</p>
            <ul id="burgersDevoured" class="alert alert-secondary textColor">
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

